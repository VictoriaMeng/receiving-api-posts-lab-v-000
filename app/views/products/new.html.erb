<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div id="productPost">
  <h2 id="title"></h2>
  <p id="desc"></p>
</div>

<script type="text/javascript">
  $(function () {
    $('form').submit(function(e) {
      e.preventDefault();
      const values = $(this).serialize();
      const posting = $.post('/products', values);

    });
  });
</script>
